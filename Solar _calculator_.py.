# Jos, Plateau State - Solar Requirement Calculator
def calculate_jos_solar_needs(hours_of_blackout, appliances_wattage):
    peak_sun_hours = 5.5  # Average for Jos region
    energy_required = (hours_of_blackout * appliances_wattage) * 1.2 
    panel_wattage = 250
    number_of_panels = energy_required / (panel_wattage * peak_sun_hours)
    return energy_required, round(number_of_panels, 1)

# Scenario: 10hr blackout, 400W load
energy, panels = calculate_jos_solar_needs(10, 400)
print(f"Daily Energy Gap: {energy} Wh | Panels Needed: {panels}")
